---
import {mainRoutes} from '../../routes.js'

---

<nav id="mainnavigation">
    <div class="navbar-toggle">
        <span></span>
        <span></span>
        <span></span>
    </div>
    <ul>
        {mainRoutes.map((route) => (
            <li class="nav-item">
                <a href={route.url}>{route.name}</a>    
            </li>
        ))}
    </ul>
    <div class="navbar-mobile">
        <span class="navbar-close">
            <i class="lni lni-close"></i>
        </span>
        <div class="navbar-mobile-content">
            <ul class="mobile-nav-list">
                {mainRoutes.map((route) => (
                    <li class="nav-item">
                        <a href={route.url}>{route.name}</a>
                    </li>
                ))}
            </ul>
            <div class="contact-information">
                <h3>Leo Knudsen</h3>
                <p>
                    <a href="mailto: knudsenudvikling@gmail.com">knudsenudvikling@gmail.com</a>
                </p>
                <p>
                    <a href="tel: +45 27 45 94 67">+45 27 45 94 67</a>
                </p>
            </div>
        </div>
    </div>
</nav>

<style>
    #mainnavigation ul:not(.mobile-nav-list) {
        display: flex;
        justify-content: space-between;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    #mainnavigation ul.mobile-nav-list {
        display: flex;
        flex-direction: column;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    #mainnavigation ul li {
        margin: 0 1rem;
    }

    #mainnavigation ul li a {
        color: #f9f9f9;
    }

    #mainnavigation .navbar-mobile .navbar-close {
        color: #f9f9f9;
        position: absolute;
        top: 2rem;
        right: 2rem;
        z-index: 2;
        cursor: pointer;
    }

    #mainnavigation .navbar-mobile{
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    #mainavigation .navbar-mobile .navbar-mobile-content {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    #mainnavigation .navbar-mobile .navbar-mobile-content ul li a {
        font-size: 30px;
    }

    #mainnavigation .navbar-mobile .navbar-mobile-content ul li {
        margin-left: 0;
    }

    @media (max-width: 991px) {
        #mainnavigation ul:not(.mobile-nav-list) {
            display: none;
        }

        .navbar-toggle {
            cursor: pointer;
        }

        .navbar-toggle span {
            display: block;
            width: 30px;
            height: 2px;
            position: relative;
            background: #f9f9f9;
            cursor: pointer;
            margin-bottom: 0.55rem;
        }

        .navbar-mobile {
            position: fixed;
            top: 0;
            right:-1000px;
            overflow: hidden;
            transition: all 0.3s ease-in-out;
            width: 100%;
            height: 100%;
            background: #1a1a1a;
        }

        .navbar-mobile.active {
            right: 0;
        }
    }

    @media (min-width: 992px) {
        #mainnavigation ul:not(.mobile-nav-list) {
            display: flex;
        }

        #mainnavigation .navbar-mobile {
            display: none;
        }
    }
</style>

<script>

const navbarToggler = document.querySelector('.navbar-toggle')
const navbarMobile = document.querySelector('.navbar-mobile')
const navbarClose = document.querySelector('.navbar-close');

navbarToggler.addEventListener('click', () => {
    navbarMobile.classList.toggle('active')
})

navbarClose.addEventListener('click', () => {
    navbarMobile.classList.toggle('active')
})
</script>